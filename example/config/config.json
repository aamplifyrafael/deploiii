{
    "app": {
        "paths": {
            "dist": "/assets/",
            "distCSS": "css/",
            "distJS": "js/",
            "styles": "/src/sass",
            "scripts": "/src/js/"
        },
        "output": {
            "babelEnabled" : true,
            "uglifyEnabled": true,
            "filename": {
